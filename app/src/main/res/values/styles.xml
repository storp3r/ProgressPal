<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="modifyButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="horizontal_linear">
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="label">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="inputObject">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="list_item">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>

    </style>
    <style name="list_item.name">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>
    <style name="list_item.detail">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style name="title">
        <item name="android:textColor">@color/primary</item>
        <item name="fontWeight">700</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="title.primary">
        <item name="android:textSize">26dp</item>
    </style>
    <style name="title.secondary">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="divider">
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/primary</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>



</resources>