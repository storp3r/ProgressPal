<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="modifyButton">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="horizontal_linear">
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="label">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textColor">#FF6B6969</item>
    </style>

    <style name="inputObject">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="list_item">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="list_item.name">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="list_item.detail">
        <item name="android:paddingBottom">5dp</item>
    </style>



</resources>